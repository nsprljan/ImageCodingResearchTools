% Haar wavelet
%
% H = (y - x) * (1 / sqrt(2))
% L = (x + y) * (1 / sqrt(2))
%    
% Prediction    -> y' = y - x  
% Update        -> x' = x + 0.5 * y' = (x + y)/2 
% Normalisation -> H  = y' * (1 / sqrt(2))
%                  L  = x' *  sqrt(2) = sqrt(2) * x + H
%      
% |1  -1| |1    0||sqrt(2)      0|
% |     | |      ||              |
% |0   1| |0.5  1||0    1/sqrt(2)|

%wvf_type
 SYMMETRIC_EVEN
%lift_coeff
-1.0,0.0
 0.0,0.5 
%lift_norm
